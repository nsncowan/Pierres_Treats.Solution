@{
  Layout = "_Layout";
}

@using Storefront.Models
@model Storefront.Models.Flavor

<h2>Flavor Page</h2>

<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

<h3>Items in this flavor</h3>
<ul>
@foreach (FlavorTreat join in Model.FlavorTreatJoinEntities)
{
  <li>@Html.ActionLink($"{join.Treat.Name}","Details", "Treat", new { id = join.TreatId})</li>
}
</ul>

<p>@Html.ActionLink("Show all Flavors", "Index")</p>
<p>@Html.ActionLink("Edit Flavor", "Edit", new {id = Model.FlavorId})</p>
<p>@Html.ActionLink("Delete Flavor", "Delete", new {id = Model.FlavorId})</p>